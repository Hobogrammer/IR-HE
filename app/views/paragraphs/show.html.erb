<%- model_class = Paragraph -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @paragraph.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text_id) %>:</strong></dt>
  <dd><%= @paragraph.text_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              paragraphs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_paragraph_path(@paragraph), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              paragraph_path(@paragraph),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= form_for @text, :html => { :class => "form-horizontal text" } do |f| %>

    <% if @text.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@text.errors.count, "error") %> prohibited this text from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @text.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@text[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%= error_span(@text[:content]) %>
  </div>
  <div class="control-group">
    <%= f.label :lang, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lang, :class => 'form-control' %>
    </div>
    <%= error_span(@text[:lang]) %>
  </div>
  <div class="control-group">
    <%= f.label :shared, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shared, :class => 'form-control' %>
    </div>
    <%= error_span(@text[:shared]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            texts_path, :class => 'btn btn-default' %>

<% end %>

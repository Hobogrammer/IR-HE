<%- model_class = Text -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @text.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @text.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lang) %>:</strong></dt>
  <dd><%= @text.lang %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shared) %>:</strong></dt>
  <dd><%= @text.shared %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              texts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_text_path(@text), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              text_path(@text),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

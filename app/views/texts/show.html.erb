<h1 id="textTitle"><%= @text.title %></h1>

<p id="content"><%= @text.content %></p>

<div class="modal hide fade" id="wordModal">
  <button type="button" class="close" data-dismiss="modal">Ã—</button>
  <div class="modal-header">
    <h3>Save a word</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for @word do |f| %>
      <%= f.input :term %>
      <%= f.input :reading %>
      <%= f.input :definition %>
      <%= f.input :sentence %>
      <%= f.input :tags %>
      <%= f.input :shared %>
  </div>
  <div class="modal-footer">
    <%= submit_tag 'Cancel', :class => "btn btn-danger", 'data-dismiss' => "modal" %>
    <%= f.button :submit, 'Save Word' , :class => "btn btn-primary"%>
    <% end %>
  </div>
</div>